<div>
  <%= form_for [@comment.review, @comment], remote: true do |f| %>
    <div id="comment_form">
      <div class="field">
        <%= f.text_area :content , class: "form-control reset-input" %>
      </div>
      <div class="actions">
        <%= f.submit t "submit" %>
      </div>
    </div>
  <% end %>
</div>
