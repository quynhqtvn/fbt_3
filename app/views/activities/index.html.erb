<h2><%= t "activity.title" %></h2>
<div class="activity-feed">
  <% @activities.each do |activity|%>
    <div class="feed-item">
      <div class="date">
         <%= time_ago_in_words(activity.created_at) %> <%= t "ago" %>
      </div>
      <div class="text">
        <%= link_to activity.owner.name, activity.owner if activity.owner %>
        <%= render_activity activity %>
      </div>
    </div>
  <% end %>
</div>

