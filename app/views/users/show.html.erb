<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <p><%= image_tag @user.avatar.url, class: "show" %></p>
      <p><%= @user.email %></p>
      <p><%= @user.name %></p>

    </section>
  </aside>
  <div class="col-md-6">
    <div>
      <% if @user.reviews.any? %>
      <%= render @user.reviews %>
      <% end %>
    </div>
  </div>
  <aside class="col-md-3">
  </aside>
</div>
